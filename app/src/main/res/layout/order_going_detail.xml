<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/backtolast"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D85A2A"
        android:drawableLeft="@drawable/icon_back"
        />
    <TextView
        android:id="@+id/going_title"
        android:background="#D85A2A"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="未完成订单详情"
        android:textColor="@color/white"
        android:textSize="20sp"

        android:gravity="center">
    </TextView>
    <TextView
        android:id="@+id/going_re_station"
        android:layout_below="@+id/going_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/rectangle_textview_style"
        android:text="收货单位：">
    </TextView>
    <TextView
        android:id="@+id/going_re_address"
        android:layout_below="@+id/going_re_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/rectangle_textview_style"
        android:textSize="20sp"
        android:text="收货地址：">
    </TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/going_re_person"
        android:layout_below="@+id/going_re_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/rectangle_textview_style"
        android:text="收货人：">
    </TextView>
    <TextView
        android:id="@+id/going_re_phone"
        android:background="@drawable/rectangle_textview_style"
        android:layout_below="@+id/going_re_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="收货人电话：">
    </TextView>
    <LinearLayout
        android:id="@+id/going_line1"
        android:layout_below="@+id/going_re_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_textview_style"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/going_itemnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="件数：">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="运费：">
            </TextView>
            <EditText
                android:id="@+id/going_mail_fess"
                android:layout_weight="1"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_box_style"
                android:hint="至少10元"></EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/going_line2"
        android:layout_below="@+id/going_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_textview_style">
        <TextView
            android:id="@+id/going_dianfu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="垫付金额：">
        </TextView>
        <TextView
            android:id="@+id/going_daishoukuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="代收款金额：">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/going_to_address"
        android:layout_below="@+id/going_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="发货地址："
        android:background="@drawable/rectangle_textview_style">
    </TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/going_to_person"
        android:layout_below="@+id/going_to_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="收货人：">
    </TextView>
    <TextView
        android:id="@+id/going_to_phone"
        android:layout_below="@+id/going_to_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/rectangle_textview_style"
        android:text="收货人电话：">
    </TextView>
    <TextView
        android:id="@+id/going_to_service_way"
        android:layout_below="@+id/going_to_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/rectangle_textview_style"
        android:text="服务方式：配送">
    </TextView>

    <TextView
        android:id="@+id/going_addition"
        android:layout_below="@+id/going_to_service_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/rectangle_textview_style"
        android:text="备注：">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/going_addition"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_box_style"
        android:hint="备注！！！"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/print"
            android:background="#FB684C"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印小票及条码"></Button>
        <Button
            android:id="@+id/going_confirm"
            android:layout_marginLeft="5dp"
            android:background="#49526B"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"></Button>
    </LinearLayout>

</RelativeLayout>