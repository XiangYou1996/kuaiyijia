<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFCC"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="请点击您要选择的功能"
    android:textColor="@color/black"
    android:background="@drawable/circle_textview_style"
    android:textSize="20sp"/>
    <RelativeLayout
        android:background="@drawable/rectangle_textview_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_scanCarLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描装车码"
            android:textColor="@color/white"
            android:background="@drawable/shape_d85a2a_btn"/>
        <Button
            android:id="@+id/bt_scanHuowuNum"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_d85a2a_btn"
            android:text="扫描商品条形码"
            android:textColor="@color/white"/>
    </RelativeLayout>


</LinearLayout>