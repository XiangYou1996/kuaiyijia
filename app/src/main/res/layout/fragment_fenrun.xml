<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/shape_353b50_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="岗位："
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_margin="10dp">

                    </TextView>
                    <EditText
                        android:layout_width="200dp"
                        android:id="@+id/shuru_1"
                        android:background="@drawable/edit_box_style"
                        android:textSize="20sp"
                        android:hint="请输入岗位"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="姓名："
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_margin="10dp">
                    </TextView>
                    <EditText
                        android:layout_width="200dp"
                        android:id="@+id/shuru_2"
                        android:background="@drawable/edit_box_style"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:hint="请输入姓名"
                        android:layout_height="wrap_content">
                    </EditText>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/chaxun"
                android:layout_width="80dp"
                android:text="查询"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_d85a2a_btn"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/gangwei"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/xingming"
                    android:textSize="20sp"
                    android:layout_height="40dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                    android:id="@+id/fenrui"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:textSize="20sp">
                </Button>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wangdian"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="20sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>