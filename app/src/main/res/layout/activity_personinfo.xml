<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <Button
        android:id="@+id/backtolast"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D85A2A"
        android:drawableLeft="@drawable/icon_back"
        />
    <LinearLayout
        android:id="@+id/personinfo"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#D85A2A"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/personinfo"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#D85A2A"
        android:layout_below="@+id/line_view"/>
    <ImageView
        android:id="@+id/person_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_personinfo"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/person_icon"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0099CC"/>
    <RelativeLayout
        android:id="@+id/pr1"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/account"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="用户名:"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/pr_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/account"
            android:textSize="20sp"
            android:text="13896965589"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/pr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099CC"/>
    <RelativeLayout
        android:id="@+id/pr2"
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="姓名:"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/pr_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:textSize="20sp"
            android:text="快易佳"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/name_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="修改"
            android:textColor="#003366"
            android:textSize="20sp" />
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/pr2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099CC"/>
    <RelativeLayout
        android:id="@+id/pr3"
        android:layout_below="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="电话:"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/pr_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tel"
            android:textSize="20sp"
            android:text="13896965589"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tel_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="修改"
            android:textColor="#003366"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_below="@+id/pr3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099CC"/>
    <RelativeLayout
        android:id="@+id/pr4"
        android:layout_below="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/hyb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="货运部:"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pr_hyb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hyb"
            android:text="重庆"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hyb_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="修改"
            android:textColor="#003366"
            android:textSize="20sp" />
    </RelativeLayout>
    <View
        android:id="@+id/view6"
        android:layout_below="@+id/pr4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099CC"/>
    <RelativeLayout
        android:id="@+id/pr5"
        android:layout_below="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/wls"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="物流商:"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/pr_wls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wls"
            android:textSize="20sp"
            android:text="重庆"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/wls_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:text="修改"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#003366"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view7"
        android:layout_below="@+id/pr5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0099CC"/>
</RelativeLayout>