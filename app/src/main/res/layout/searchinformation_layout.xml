<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:id="@+id/dingdanhao"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginLeft="65dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货单位："
        android:id="@+id/shouhuo1"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginLeft="40dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话："
        android:id="@+id/dianhua"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginLeft="89dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系人："
        android:id="@+id/lianxi"
        android:layout_marginTop="15dp"
        android:textSize="20dp"

        android:layout_marginLeft="65dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件数："
                android:layout_marginLeft="15dp"
                android:id="@+id/jianshu"

                android:textSize="20dp"
                android:textColor="#FF0000"
               >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费："


                android:id="@+id/yunfei"
                android:textSize="20dp"
                android:textColor="#FF0000"
                >
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垫付："
                android:id="@+id/dianfu"

                android:textSize="20dp"

                android:layout_marginLeft="15dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代收款："
                android:id="@+id/daishoukuan"

                android:textSize="20dp"

                >
            </TextView>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发货单位："
        android:id="@+id/fahuo1"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginLeft="40dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话："
        android:id="@+id/dianhua2"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginLeft="89dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务："
        android:id="@+id/fuwu"
        android:layout_marginTop="15dp"
        android:textSize="20dp"

        android:layout_marginLeft="89dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注："
        android:id="@+id/beizhu"
        android:layout_marginTop="50dp"
        android:textSize="20dp"

        android:layout_marginLeft="89dp">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:id="@+id/queding"
            android:layout_alignParentBottom="true">

        </Button>
    </RelativeLayout>





</LinearLayout>