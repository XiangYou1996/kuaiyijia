<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/backtolast"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:drawableLeft="@drawable/icon_back"
        />
    <LinearLayout
        android:id="@+id/web_branch_addition"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#333333"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加网点"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>
    <TextView
        android:id="@+id/wb_info"
        android:layout_below="@+id/web_branch_addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网点信息"
        android:textSize="30sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/wb_line1"
        android:layout_below="@+id/wb_info"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="网点名称: "
            android:textSize="20sp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/wb_wb_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="请输入网点名称"
            android:textSize="20sp"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wb_line2"
        android:layout_below="@+id/wb_line1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="网点简称: "
            android:textSize="20dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/wb_wb_abbreviation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="网点所在简称，例如：江北"
            android:textSize="20dp"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wb_line3"
        android:layout_below="@+id/wb_line2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="货运部电话: "
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/wb_wb_tel"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="请输入电话号码"
            android:textSize="20sp"
            android:inputType="number"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wb_line4"
        android:layout_below="@+id/wb_line3"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="联系人: "
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/wb_wb_person_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="请输入联系人姓名"
            android:textSize="20sp"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wb_line5"
        android:layout_below="@+id/wb_line4"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="联系人电话: "
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/wb_wb_person_tel"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="请输入联系人电话"
            android:textSize="20sp"
            android:inputType="number"
            android:imeOptions="actionNext"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/wb_line6"
        android:layout_below="@+id/wb_line5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/webbrancgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网点详细地址: "
            android:textSize="20sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/wb_wb_location_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获取定位"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:textColor="#0066CC"/>
    </RelativeLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/wb_line6"
        android:id="@+id/wb_concretAddress"
        android:background="@drawable/edit_box_style"
        android:hint="请输入详细地址"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:imeOptions="actionDone"/>
    <Button
        android:id="@+id/wb_add_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:text="确认添加"
        android:background="@drawable/big_button_style"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"></Button>

</RelativeLayout>