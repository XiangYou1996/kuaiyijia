<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/backtolast"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:drawableLeft="@drawable/icon_back"
        />
    <LinearLayout
        android:id="@+id/pm_person_modify"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#333333"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员信息修改"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/pm_modify_line1"
        android:layout_below="@+id/pm_person_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_textview_style">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="25sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/pm_modify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:text="张三"
            android:textSize="25sp"
            android:inputType="text"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/pm_modify_line2"
        android:layout_below="@+id/pm_modify_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_textview_style">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="电话"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/pm_modify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:text="张三"
            android:inputType="number"
            android:textSize="25sp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/pm_modify_line3"
        android:layout_below="@+id/pm_modify_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_textview_style">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="所属网点"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/pm_modify_webbranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:text="张三"
            android:inputType="text"
            android:textSize="25sp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pm_modify_line4"
        android:layout_below="@+id/pm_modify_line3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_textview_style">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="岗位"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_gravity="center"/>
        <Spinner
            android:id="@+id/pm_modify_station_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:scrollbarSize="30sp"
            android:entries="@array/StationType"
             />
    </LinearLayout>
    <Button
        android:id="@+id/pm_person_manage_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:text="确认修改"
        android:background="@drawable/big_button_style"
        android:textColor="#FCFCFC"
        android:layout_alignParentBottom="true"></Button>

</RelativeLayout>