<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/zong">
        <LinearLayout
            android:background="@drawable/rectangle_textview_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="订单号："
                        android:textColor="@color/black"
                        android:textSize="20sp">
                    </TextView>
                    <EditText
                        android:layout_width="160dp"
                        android:id="@+id/shuru_1"
                        android:background="@drawable/edit_box_style"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:hint="请输入订单号"
                        android:layout_height="wrap_content">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="收获单位："
                        android:textColor="@color/black"
                        android:textSize="20sp">
                    </TextView>
                    <EditText
                        android:layout_width="160dp"
                        android:id="@+id/shuru_2"
                        android:background="@drawable/edit_box_style"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:hint="请输入收获单位"
                        android:layout_height="wrap_content">

                    </EditText>

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/chaxun"
                android:layout_width="80dp"
                android:text="查询"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_d85a2a_btn"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/gaga">
            <LinearLayout
                android:background="@drawable/rectangle_textview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/hah"
                    android:layout_marginTop="20dp">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货物1"
                        android:id="@+id/check_1">

                    </CheckBox>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/neirong_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(订单号)"
                        android:id="@+id/dingdan">
                    </TextView>

                    <TextView
                        android:id="@+id/fahuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(发货单位)"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(收获单位)"
                        android:id="@+id/shouhuo">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(待付款)"
                        android:id="@+id/fukuan">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看详情"
                        android:textColor="@color/white"
                        android:background="@drawable/small_button_style"
                        android:id="@+id/chakan_1">

                    </Button>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rectangle_textview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货物2"

                        android:id="@+id/check_2">

                    </CheckBox>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/neirong_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(订单号)">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(发货单位)">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(收获单位)">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx(待付款)">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看详情"
                        android:textColor="@color/white"
                        android:background="@drawable/small_button_style"
                        android:id="@+id/chakan_2">

                    </Button>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="消息推送"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/shape_d85a2a_btn"
                android:id="@+id/submit">
            </Button>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>