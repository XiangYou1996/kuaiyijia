<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_v_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:background="@drawable/rectangle_textview_style"
            android:textColor="@color/black"
            android:text="车牌号："/>
        <TextView
            android:id="@+id/tv_dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:background="@drawable/rectangle_textview_style"
            android:textColor="@color/black"
            android:text="目的地："/>
        <TextView
            android:id="@+id/tv_statue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:background="@drawable/rectangle_textview_style"
            android:textColor="@color/black"
            android:text="故障状态："/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_textview_style"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_traffic_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/shape_btn_353b50_10"
                android:text="堵车"/>
            <Button
                android:id="@+id/bt_fault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_353b50_10"
                android:text="故障"/>
            <Button
                android:id="@+id/bt_accident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="事故"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_353b50_10"/>
            <Button
                android:id="@+id/bt_fault_discharged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="解除"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_353b50_10"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_scanCarGo"
        android:background="@drawable/shape_d85a2a_btn"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫码发车"
        android:textSize="20sp"/>

</RelativeLayout>